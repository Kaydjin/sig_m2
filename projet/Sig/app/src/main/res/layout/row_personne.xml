<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/nom_batiment_travail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom lieu de travail"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/nom"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/nom_metier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ©tier"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/nom"
            app:layout_constraintLeft_toRightOf="@+id/nom_batiment_travail"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nom"
            android:layout_below="@+id/nom"
            android:text="Adresse"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/nom_metier"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginLeft="30dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>